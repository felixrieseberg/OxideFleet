<div id="panel-menu">
    <div id="user-info">
        <img {{bind-attr src=currentUser.avatarUrl}} width="200px" />
        <img src="/assets/img/userOverlay.png" width="200px" />
    </div>
    <div class="accordion" id="leftMenu">
        {{#if session.isAuthenticated}}
        <div class="accordion-group">
            <div class="accordion-heading">
                {{#link-to 'dashboard' class="accordion-toggle sidebar-link"}}
                    <span class="fa-stack fa-lg">
                        <i class="fa fa-circle dark fa-stack-2x"></i>
                        <i class="fa fa-home light fa-stack-1x fa-inverse"></i>
                    </span> Dashboard
                {{/link-to}}
            </div>
        </div>
        <div class="accordion-group">
            <div class="accordion-heading">
                <a class="accordion-toggle" class="collapse" data-toggle="collapse" data-parent="#leftMenu" href="#collapseTwo">
                    <span class="fa-stack fa-lg">
                        <i class="fa fa-circle dark fa-stack-2x"></i>
                        <i class="fa fa-map-marker light fa-stack-1x fa-inverse"></i>
                    </span> Locations
                </a>
            </div>
            <div id="collapseTwo" class="accordion-body collapse in">
                <div class="accordion-inner">
                    <ul>
                        {{#each locations}}
                            {{#link-to 'location' id tagName="li" class="sidebar-link"}} {{fa-icon "map-marker"}} {{name}}{{/link-to}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
        <div class="accordion-group">
            <div class="accordion-heading">
                <a class="accordion-toggle" class="collapse" data-toggle="collapse" data-parent="#leftMenu" href="#collapseDevices">
                    <span class="fa-stack fa-lg">
                        <i class="fa fa-circle dark fa-stack-2x"></i>
                        <i class="fa fa-cloud light fa-stack-1x fa-inverse"></i>
                    </span> Devices
                </a>
            </div>
            <div id="collapseDevices" class="accordion-body collapse-devices in">
                <div class="accordion-inner">
                    <ul>
                        {{#each devices}}
                            {{#link-to 'device' id tagName="li" class="sidebar-link"}} {{fa-icon "cloud"}} {{name}}{{/link-to}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
        <div class="accordion-group">
            <div class="accordion-heading">
                {{#link-to 'settings' class="accordion-toggle sidebar-link"}}
                    <span class="fa-stack fa-lg">
                        <i class="fa fa-circle dark fa-stack-2x"></i>
                        <i class="fa fa-gear light fa-stack-1x fa-inverse"></i>
                    </span> Settings
                {{/link-to}}
            </div>
        </div>
        <div class="accordion-group">
            <div class="accordion-heading last">
                <a class="accordion-toggle" {{ action 'invalidateSession' }}>
                    <span class="fa-stack fa-lg">
                        <i class="fa fa-circle dark fa-stack-2x"></i>
                        <i class="fa fa-sign-out light fa-stack-1x fa-inverse"></i>
                    </span> Sign Out
                </a>
            </div>
        </div>
        {{else}}
        <div class="accordion-group">
            <div class="accordion-heading last">
                {{#link-to 'login' class="accordion-toggle sidebar-link"}}
                    <span class="fa-stack fa-lg">
                        <i class="fa fa-circle dark fa-stack-2x"></i>
                        <i class="fa fa-sign-in light fa-stack-1x fa-inverse"></i>
                    </span> Sign in
                {{/link-to}}
            </div>
        </div>
        {{/if}}
    </div>
    <div class="fineprint">
        Support Â· Privacy Policy
    </div>
</div>
